<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <p>Results:</p>
  <% if @repos %>
    <% @repos.each do |repo| %>
      <ul>
        <li><%= link_to repo["name"], repo[:html_url] %></li>
      </ul>
    <% end %>
  <% end %>
</div>
